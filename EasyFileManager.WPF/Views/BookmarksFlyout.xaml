<UserControl x:Class="EasyFileManager.WPF.Views.BookmarksFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:EasyFileManager.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:BookmarksViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="300"
             Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PrimaryHueMidBrush}"
                Padding="16,12">
            <DockPanel>
                <materialDesign:PackIcon Kind="Bookmark"
                                         Width="24"
                                         Height="24"
                                         Foreground="{DynamicResource MaterialDesignBody}"
                                         VerticalAlignment="Center"
                                         DockPanel.Dock="Left"
                                         Margin="0,0,12,0"/>
                <TextBlock Text="Bookmarks"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Bookmarks List -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Bookmarks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent"
                                Margin="4,2"
                                CornerRadius="4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon + Name (clickable) -->
                                <Button Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Padding="12,8"
                                        Command="{Binding DataContext.NavigateToBookmarkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="{Binding Icon}"
                                                                 Width="20"
                                                                 Height="20"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,12,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="180"/>
                                            <TextBlock Text="{Binding Path}"
                                                       FontSize="11"
                                                       Opacity="0.7"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="180"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>

                                <!-- Actions Menu -->
                                <Button Grid.Column="2"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        Width="32"
                                        Height="32"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        Click="ActionsButton_Click"
                                        Tag="{Binding}">
                                    <materialDesign:PackIcon Kind="DotsVertical" Width="18" Height="18"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding Bookmarks.Count, Converter={StaticResource InverseCountToVisibilityConverter}}">
            <materialDesign:PackIcon Kind="BookmarkOff"
                                     Width="64"
                                     Height="64"
                                     Opacity="0.3"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,16"/>
            <TextBlock Text="No bookmarks yet"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       Opacity="0.5"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Press Ctrl+D to add current folder"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Opacity="0.5"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="200"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                Padding="8">
            <StackPanel>
                <!-- Add Bookmark Button -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
        Command="{Binding AddCurrentPathCommand}"
        HorizontalAlignment="Stretch"
        Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="BookmarkPlus" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="ADD BOOKMARK" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Status -->
                <TextBlock Text="{Binding StatusMessage}"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
