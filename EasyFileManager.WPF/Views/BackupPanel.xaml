<UserControl x:Class="EasyFileManager.WPF.Views.BackupPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:EasyFileManager.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:BackupViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Resources for BackupPanel -->
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*" MinHeight="200"/>
            <!-- Jobs List -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Panel -->
            <RowDefinition Height="350"/>
            <!-- Recent History -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueMidBrush}"
                Padding="16">
            <DockPanel>
                <materialDesign:PackIcon Kind="BackupRestore" 
                                         Width="32" 
                                         Height="32"
                                         Foreground="White"
                                         VerticalAlignment="Center"
                                         DockPanel.Dock="Left"
                                         Margin="0,0,12,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Backup Manager"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Foreground="White"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="White"
                               Opacity="0.8"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                Padding="12,8"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,0,0,1">
            <WrapPanel Orientation="Horizontal">
                <!-- New Job -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding CreateNewJobCommand}"
                        Margin="4"
                        Height="36">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="New Job" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Edit Job -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding EditJobCommand}"
                        Margin="4"
                        Height="36">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Pencil" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Edit" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Delete Job -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding DeleteJobCommand}"
                        Margin="4"
                        Height="36">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Delete" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Browse Backups - NOWY! -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding BrowseBackupsCommand}"
                        IsEnabled="{Binding CanBrowseBackups}"
                        Margin="4"
                        Height="36">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderClock" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Browse Backups" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Separator Margin="8,4"
                           Height="28"/>

                <!-- Run Backup -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding RunBackupCommand}"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Foreground="White"
                        Margin="4"
                        Height="36">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Play" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Run Backup" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Cancel Backup -->
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding CancelBackupCommand}"
                        Visibility="{Binding IsBackupRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="4"
                        Height="36">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Stop" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Separator Margin="8,4"
                           Height="28"/>

                <!-- Toggle Scheduler -->
                <StackPanel Orientation="Horizontal" Margin="4" VerticalAlignment="Center">
                    <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  IsChecked="{Binding IsSchedulerRunning, Mode=TwoWay}"
                                  ToolTip="Enable/Disable Scheduler"
                                  Margin="0,0,8,0"/>
                    <TextBlock Text="Scheduler" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                </StackPanel>

                <!-- Refresh -->
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        Command="{Binding LoadBackupJobsCommand}"
                        ToolTip="Refresh"
                        Margin="4"
                        Height="36"
                        Width="36">
                    <materialDesign:PackIcon Kind="Refresh" 
                                             Width="20" 
                                             Height="20"/>
                </Button>
            </WrapPanel>
        </Border>

        <!-- Jobs List -->
        <DataGrid Grid.Row="2"
                  x:Name="JobsDataGrid"
                  ItemsSource="{Binding BackupJobs}"
                  SelectedItem="{Binding SelectedJob, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="8"
                  IsSynchronizedWithCurrentItem="True"
                  materialDesign:DataGridAssist.CellPadding="8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
            <DataGrid.Columns>
                <!-- Status -->
                <DataGridTemplateColumn Header="Status" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        ToolTip="{Binding StatusTooltip}">
                                <materialDesign:PackIcon Kind="{Binding StatusIcon}" 
                                                         Width="24" 
                                                         Height="24">
                                    <materialDesign:PackIcon.Foreground>
                                        <SolidColorBrush Color="{Binding StatusColor}"/>
                                    </materialDesign:PackIcon.Foreground>
                                </materialDesign:PackIcon>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Enabled -->
                <DataGridTemplateColumn Header="Enabled" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                      HorizontalAlignment="Center"
                                      Checked="EnabledCheckBox_Changed"
                                      Unchecked="EnabledCheckBox_Changed"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Name -->
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding Name}" 
                                    Width="*"
                                    MinWidth="150"/>

                <!-- Schedule -->
                <DataGridTextColumn Header="Schedule" 
                                    Binding="{Binding ScheduleDescription}" 
                                    Width="200"/>

                <!-- Last Run -->
                <DataGridTextColumn Header="Last Run" 
                                    Binding="{Binding LastRunTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                    Width="150"/>

                <!-- Next Run -->
                <DataGridTextColumn Header="Next Run" 
                                    Binding="{Binding NextRunTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                    Width="150"/>

                <!-- Size -->
                <DataGridTextColumn Header="Last Size" 
                                    Binding="{Binding LastBackupSize}" 
                                    Width="100"/>

                <!-- Count -->
                <DataGridTextColumn Header="Total Backups" 
                                    Binding="{Binding TotalBackupCount}" 
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Progress Panel -->
        <Border Grid.Row="3"
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="16"
                Visibility="{Binding IsBackupRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="{Binding CurrentProgress.JobName, Mode=OneWay, StringFormat='Backing up: {0}'}"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Margin="0,0,0,8"/>

                <TextBlock Text="{Binding CurrentProgress.CurrentFile, Mode=OneWay}"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Margin="0,0,0,8"
                           TextTrimming="CharacterEllipsis"/>

                <ProgressBar Value="{Binding CurrentProgress.PercentComplete, Mode=OneWay}"
                             Minimum="0"
                             Maximum="100"
                             Height="8"
                             Margin="0,0,0,8"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}">
                        <Run Text="{Binding CurrentProgress.ProcessedFiles, Mode=OneWay}"/>
                        <Run Text="/"/>
                        <Run Text="{Binding CurrentProgress.TotalFiles, Mode=OneWay}"/>
                        <Run Text="files"/>
                    </TextBlock>

                    <TextBlock Grid.Column="1"
                               Text="{Binding CurrentProgress.PercentComplete, Mode=OneWay, StringFormat='{}{0:F0}%'}"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Recent History -->
        <GroupBox Grid.Row="4"
                  Header="Recent History"
                  Style="{StaticResource MaterialDesignCardGroupBox}"
                  Margin="8">
            <ListView ItemsSource="{Binding RecentHistory}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Status" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:PackIcon Kind="{Binding StatusIcon}" 
                                                             Width="20" 
                                                             Height="20"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Job" 
                                        DisplayMemberBinding="{Binding JobName}" 
                                        Width="200"/>

                        <GridViewColumn Header="Start Time" 
                                        DisplayMemberBinding="{Binding StartTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                        Width="150"/>

                        <GridViewColumn Header="Duration" 
                                        DisplayMemberBinding="{Binding Duration}" 
                                        Width="100"/>

                        <GridViewColumn Header="Files" 
                                        Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding ProcessedFiles, Mode=OneWay}"/>
                                        <Run Text="/"/>
                                        <Run Text="{Binding TotalFiles, Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Size" 
                                        DisplayMemberBinding="{Binding TotalSize}" 
                                        Width="100"/>

                        <GridViewColumn Header="Destination" 
                                        DisplayMemberBinding="{Binding DestinationPath}" 
                                        Width="auto"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</UserControl>
