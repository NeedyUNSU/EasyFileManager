<Window x:Class="EasyFileManager.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:EasyFileManager.WPF.Views"
        xmlns:vm="clr-namespace:EasyFileManager.WPF.ViewModels"
        xmlns:core="clr-namespace:EasyFileManager.Core.Models;assembly=EasyFileManager.Core"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:EasyFileManager.WPF.Behaviors"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}"
        Title="Easy File Manager" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>

        <Grid.InputBindings>
            <KeyBinding Key="F" Modifiers="Ctrl+Shift" 
                    Command="{Binding RightPanel.ShowFilterCommand}"/>
            <KeyBinding Key="Escape"
                    Command="{Binding RightPanel.HideFilterCommand}"/>
            <KeyBinding Key="F" Modifiers="Ctrl" 
                    Command="{Binding LeftPanel.ShowFilterCommand}"/>
            <KeyBinding Key="Escape"
                    Command="{Binding LeftPanel.HideFilterCommand}"/>
            <KeyBinding Key="F5" Command="{Binding LeftPanel.LoadDirectoryCommand}"/>
            <KeyBinding Key="F6" Command="{Binding RightPanel.LoadDirectoryCommand}"/>
            <KeyBinding Key="Delete" Command="{Binding LeftPanel.DeleteItemCommand}" 
                    CommandParameter="{Binding LeftPanel.SelectedItem}"/>
            <KeyBinding Key="F2" Command="{Binding LeftPanel.RenameItemCommand}" 
                    CommandParameter="{Binding LeftPanel.SelectedItem}"/>
        </Grid.InputBindings>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <GridViewColumnHeader Content="Name" 
                      Tag="Name"
                      Style="{StaticResource CustomGridViewColumnHeader}"/>
        <!-- Top Bar -->
        <materialDesign:ColorZone Grid.Row="0" 
                                   Mode="PrimaryMid" 
                                   Padding="16"
                                   materialDesign:ElevationAssist.Elevation="Dp4">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Folder" 
                                             Width="32" 
                                             Height="32" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Easy File Manager" 
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Right"
            DockPanel.Dock="Right">
                    <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                        IsChecked="{Binding IsDarkTheme}"
                        Command="{Binding ToggleThemeCommand}"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        ToolTip="Toggle Dark/Light Theme"
                        Margin="8,0">
                        <ToggleButton.Content>
                            <materialDesign:PackIcon Kind="WeatherNight"/>
                        </ToggleButton.Content>
                        
                        <materialDesign:ToggleButtonAssist.OnContent>
                            <materialDesign:PackIcon Kind="WeatherSunny"/>
                        </materialDesign:ToggleButtonAssist.OnContent>
                    </ToggleButton>

                    <!-- Settings -->
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Settings"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Margin="8,0"
                        Command="{Binding ShowSettingsCommand}">
                        <materialDesign:PackIcon Kind="Cog" Width="20" Height="20"/>
                    </Button>

                    <!-- About -->
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="About"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Margin="8,0"
                        Command="{Binding ShowAboutCommand}">
                        <materialDesign:PackIcon Kind="Information" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <materialDesign:Card Grid.Column="0" DataContext="{Binding LeftPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Left Panel Header -->
                    <Grid Grid.Row="0" x:Name="LeftPanelGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Wiersz 1: Nawigacja (istniejący kod) -->
                        <Border Grid.Row="0"
            Background="{DynamicResource MaterialDesignToolBarBackground}"
            Padding="8">
                            <DockPanel>
                                <!-- Przyciski po prawej -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                    <!-- ✅ DODAJ przycisk Filter -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Filter (Ctrl+F)"
                        Command="{Binding ShowFilterCommand}"
                        Margin="4,0">
                                        <materialDesign:PackIcon Kind="Magnify"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh"
                        Command="{Binding LoadDirectoryCommand}"
                        Margin="4,0">
                                        <materialDesign:PackIcon Kind="Refresh"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Go Up"
                        Command="{Binding NavigateUpCommand}"
                        Margin="4,0">
                                        <materialDesign:PackIcon Kind="ArrowUp"/>
                                    </Button>
                                </StackPanel>

                                <!-- Drive selector + Path -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                    <ComboBox Width="120"
                          ItemsSource="{Binding AvailableDrives}"
                          SelectedItem="{Binding SelectedDrive}"
                          materialDesign:HintAssist.Hint="Drive"
                          Style="{StaticResource MaterialDesignFilledComboBox}"
                          VerticalAlignment="Center"
                          Margin="0,0,8,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="{Binding DriveType, Converter={StaticResource DriveTypeToIconConverter}}"
                                                         Width="16"
                                                         Height="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Name, Mode=OneWay}" 
                                           VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <Grid Width="300" VerticalAlignment="Center">
                                        <!-- Breadcrumb mode (domyślny) -->
                                        <Border Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
            CornerRadius="4"
            Padding="8,4"
            Visibility="{Binding IsPathEditable, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                            <DockPanel>
                                                <!-- Przycisk Edit (przełącz na TextBox) -->
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{Binding TogglePathEditCommand}"
                    ToolTip="Edit path"
                    Width="20"
                    Height="20"
                    DockPanel.Dock="Right">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14"/>
                                                </Button>

                                                <!-- Breadcrumbs -->
                                                <views:BreadcrumbBar DataContext="{Binding}"/>
                                            </DockPanel>
                                        </Border>

                                        <!-- Edit mode (TextBox) -->
                                        <TextBox Text="{Binding CurrentPath, UpdateSourceTrigger=PropertyChanged}"
             materialDesign:HintAssist.Hint="Path"
             Style="{StaticResource MaterialDesignFilledTextBox}"
             Visibility="{Binding IsPathEditable, Converter={StaticResource BooleanToVisibilityConverter}}"
             x:Name="PathTextBox">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding LoadDirectoryCommand}"/>
                                                <KeyBinding Key="Escape" Command="{Binding TogglePathEditCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>
                                    </Grid>
                                </StackPanel>

                                <!-- Loading indicator -->
                                <ProgressBar IsIndeterminate="True"
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Height="4"
                         VerticalAlignment="Bottom"
                         Margin="0,4,0,0"/>
                            </DockPanel>
                        </Border>

                        <!-- ✅ Wiersz 2: Filter box (pokazuje się po Ctrl+F) -->
                        <Border Grid.Row="1"
            Background="{DynamicResource MaterialDesignCardBackground}"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="0,2,0,0"
            Padding="8"
            Visibility="{Binding IsFilterVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DockPanel>
                                <!-- Przycisk X (zamknij) -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{Binding HideFilterCommand}"
                    ToolTip="Close filter (Esc)"
                    DockPanel.Dock="Right"
                    Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="Close"/>
                                </Button>

                                <!-- Przycisk Clear -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{Binding ClearFilterCommand}"
                    ToolTip="Clear filter"
                    DockPanel.Dock="Right"
                    Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="FilterRemove"/>
                                </Button>

                                <!-- Info o wynikach -->
                                <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} items'}"
                       VerticalAlignment="Center"
                       Margin="8,0"
                       FontSize="11"
                       Opacity="0.7"
                       DockPanel.Dock="Right"/>

                                <!-- Filter TextBox -->
                                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
         materialDesign:HintAssist.Hint="Filter files..."
         Style="{StaticResource MaterialDesignFilledTextBox}"
         VerticalAlignment="Center"
         materialDesign:TextFieldAssist.HasLeadingIcon="True"
         materialDesign:TextFieldAssist.LeadingIcon="Magnify">
                                    <i:Interaction.Behaviors>
                                        <behaviors:FocusOnVisibleBehavior/>
                                    </i:Interaction.Behaviors>
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Esc" Command="{Binding HideFilterCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <!-- Left Panel Content -->
                    <ListView Grid.Row="1" 
          Margin="8"
          ItemsSource="{Binding Items}"
          SelectedItem="{Binding SelectedItem}"
          Style="{StaticResource MaterialDesignListView}"
          ItemContainerStyle="{StaticResource AlternatingListViewItemStyle}"
          AlternationCount="2"
          behaviors:SortIndicatorHelper.SortColumn="{Binding SortColumn}"
          behaviors:SortIndicatorHelper.SortDirection="{Binding SortDirection}">

                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open" 
                      Command="{Binding OpenItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="FolderOpen"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Copy" 
                      Command="{Binding CopyItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ContentCopy"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Copy Path" 
                      Command="{Binding CopyPathCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="LinkVariant"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Rename" 
                      Command="{Binding RenameItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Pencil"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Delete" 
                      Command="{Binding DeleteItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Delete" Foreground="Red"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Properties" 
                      Command="{Binding ShowPropertiesCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Information"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <i:Interaction.Behaviors>
                            <behaviors:ListViewDoubleClickBehavior Command="{Binding OpenItemCommand}"/>
                            <behaviors:GridViewColumnHeaderClickBehavior Command="{Binding SortByCommand}"/>
                        </i:Interaction.Behaviors>

                        <ListView.View>
                            <GridView>
                                <!-- Column 1: Name with Icon (stretch to fill remaining space) -->
                                <GridViewColumn Width="250">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Name" Tag="Name" Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="4,2">
                                                <materialDesign:PackIcon VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Width="16" 
                                                 Height="16"
                                                 Kind="{Binding Converter={StaticResource FileEntryToIconConverter}}"/>
                                                <TextBlock Text="{Binding Name}" 
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 2: Size (auto-width based on content) -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Size" 
                                      Tag="Size"
                                      HorizontalContentAlignment="Right"
                                      Padding="8,4"
                                      MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToSizeConverter}}" 
                               TextAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="8,2"
                               MinWidth="60"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 3: Type (auto-width) -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Type" 
                                      Tag="Type"
                                      Padding="8,4"
                                      MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToTypeConverter}}" 
                               VerticalAlignment="Center"
                               Margin="8,2"
                               MinWidth="50"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 4: Date Modified (fixed width) -->
                                <GridViewColumn Width="140">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Date Modified" 
                                      Tag="LastModified"
                                      Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToDateConverter}}" 
                               VerticalAlignment="Center"
                               Margin="8,2"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:Card>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Right Panel -->
            <materialDesign:Card Grid.Column="2" DataContext="{Binding RightPanel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Right Panel Header -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Wiersz 1: Nawigacja (istniejący kod) -->
                        <Border Grid.Row="0"
            Background="{DynamicResource MaterialDesignToolBarBackground}"
            Padding="8">
                            <DockPanel>
                                <!-- Przyciski po prawej -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                    <!-- ✅ DODAJ przycisk Filter -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Filter (Ctrl+F)"
                        Command="{Binding ShowFilterCommand}"
                        Margin="4,0">
                                        <materialDesign:PackIcon Kind="Magnify"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh"
                        Command="{Binding LoadDirectoryCommand}"
                        Margin="4,0">
                                        <materialDesign:PackIcon Kind="Refresh"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Go Up"
                        Command="{Binding NavigateUpCommand}"
                        Margin="4,0">
                                        <materialDesign:PackIcon Kind="ArrowUp"/>
                                    </Button>
                                </StackPanel>

                                <!-- Drive selector + Path -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                    <ComboBox Width="120"
                          ItemsSource="{Binding AvailableDrives}"
                          SelectedItem="{Binding SelectedDrive}"
                          materialDesign:HintAssist.Hint="Drive"
                          Style="{StaticResource MaterialDesignFilledComboBox}"
                          VerticalAlignment="Center"
                          Margin="0,0,8,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="{Binding DriveType, Converter={StaticResource DriveTypeToIconConverter}}"
                                                         Width="16"
                                                         Height="16"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Name, Mode=OneWay}" 
                                           VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <Grid Width="300" VerticalAlignment="Center">
                                        <!-- Breadcrumb mode (domyślny) -->
                                        <Border Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
            CornerRadius="4"
            Padding="8,4"
            Visibility="{Binding IsPathEditable, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                            <DockPanel>
                                                <!-- Przycisk Edit (przełącz na TextBox) -->
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{Binding TogglePathEditCommand}"
                    ToolTip="Edit path"
                    Width="20"
                    Height="20"
                    DockPanel.Dock="Right">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14"/>
                                                </Button>

                                                <!-- Breadcrumbs -->
                                                <views:BreadcrumbBar DataContext="{Binding}"/>
                                            </DockPanel>
                                        </Border>

                                        <!-- Edit mode (TextBox) -->
                                        <TextBox Text="{Binding CurrentPath, UpdateSourceTrigger=PropertyChanged}"
             materialDesign:HintAssist.Hint="Path"
             Style="{StaticResource MaterialDesignFilledTextBox}"
             Visibility="{Binding IsPathEditable, Converter={StaticResource BooleanToVisibilityConverter}}"
             x:Name="PathTextBox2">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding LoadDirectoryCommand}"/>
                                                <KeyBinding Key="Escape" Command="{Binding TogglePathEditCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>
                                    </Grid>
                                </StackPanel>

                                <!-- Loading indicator -->
                                <ProgressBar IsIndeterminate="True"
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Height="4"
                         VerticalAlignment="Bottom"
                         Margin="0,4,0,0"/>
                            </DockPanel>
                        </Border>

                        <!-- ✅ Wiersz 2: Filter box (pokazuje się po Ctrl+F) -->
                        <Border Grid.Row="1"
            Background="{DynamicResource MaterialDesignCardBackground}"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="0,2,0,0"
            Padding="8"
            Visibility="{Binding IsFilterVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DockPanel>
                                <!-- Przycisk X (zamknij) -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{Binding HideFilterCommand}"
                    ToolTip="Close filter (Esc)"
                    DockPanel.Dock="Right"
                    Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="Close"/>
                                </Button>

                                <!-- Przycisk Clear -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                    Command="{Binding ClearFilterCommand}"
                    ToolTip="Clear filter"
                    DockPanel.Dock="Right"
                    Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="FilterRemove"/>
                                </Button>

                                <!-- Info o wynikach -->
                                <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} items'}"
                       VerticalAlignment="Center"
                       Margin="8,0"
                       FontSize="11"
                       Opacity="0.7"
                       DockPanel.Dock="Right"/>

                                <!-- Filter TextBox -->
                                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Filter files..."
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     VerticalAlignment="Center"
                     materialDesign:TextFieldAssist.HasLeadingIcon="True"
                     materialDesign:TextFieldAssist.LeadingIcon="Magnify">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Esc" Command="{Binding HideFilterCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <!-- Right Panel Content -->
                    <ListView Grid.Row="1" 
          Margin="8"
          ItemsSource="{Binding Items}"
          SelectedItem="{Binding SelectedItem}"
          Style="{StaticResource MaterialDesignListView}"
          ItemContainerStyle="{StaticResource AlternatingListViewItemStyle}"
          AlternationCount="2"
          behaviors:SortIndicatorHelper.SortColumn="{Binding SortColumn}"
          behaviors:SortIndicatorHelper.SortDirection="{Binding SortDirection}">

                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open" 
                      Command="{Binding OpenItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="FolderOpen"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Copy" 
                      Command="{Binding CopyItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ContentCopy"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Copy Path" 
                      Command="{Binding CopyPathCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="LinkVariant"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Rename" 
                      Command="{Binding RenameItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Pencil"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Delete" 
                      Command="{Binding DeleteItemCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Delete" Foreground="Red"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Properties" 
                      Command="{Binding ShowPropertiesCommand}"
                      CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Information"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <i:Interaction.Behaviors>
                            <behaviors:ListViewDoubleClickBehavior Command="{Binding OpenItemCommand}"/>
                            <behaviors:GridViewColumnHeaderClickBehavior Command="{Binding SortByCommand}"/>
                        </i:Interaction.Behaviors>

                        <ListView.View>
                            <GridView>
                                <!-- Column 1: Name with Icon (stretch to fill remaining space) -->
                                <GridViewColumn Width="250">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Name" Tag="Name" Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="4,2">
                                                <materialDesign:PackIcon VerticalAlignment="Center"
                                                 Margin="0,0,8,0"
                                                 Width="16" 
                                                 Height="16"
                                                 Kind="{Binding Converter={StaticResource FileEntryToIconConverter}}"/>
                                                <TextBlock Text="{Binding Name}" 
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 2: Size (auto-width based on content) -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Size" 
                                      Tag="Size"
                                      HorizontalContentAlignment="Right"
                                      Padding="8,4"
                                      MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToSizeConverter}}" 
                               TextAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="8,2"
                               MinWidth="60"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 3: Type (auto-width) -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Type" 
                                      Tag="Type"
                                      Padding="8,4"
                                      MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToTypeConverter}}" 
                               VerticalAlignment="Center"
                               Margin="8,2"
                               MinWidth="50"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 4: Date Modified (fixed width) -->
                                <GridViewColumn Width="140">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Date Modified" 
                                      Tag="LastModified"
                                      Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToDateConverter}}" 
                               VerticalAlignment="Center"
                               Margin="8,2"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2" 
                           Mode="PrimaryLight" 
                           Padding="8">
            <DockPanel>
                <TextBlock Text="{Binding LeftPanel.StatusMessage}" 
                   VerticalAlignment="Center"
                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>

                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right">
                    <TextBlock VerticalAlignment="Center"
                       Margin="0,0,16,0">
                <Run Text="Left: "/>
                <Run Text="{Binding LeftPanel.TotalItems, Mode=OneWay}"/>
                <Run Text=" items"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center"
                       Margin="0,0,16,0">
                <Run Text="Right: "/>
                <Run Text="{Binding RightPanel.TotalItems, Mode=OneWay}"/>
                <Run Text=" items"/>
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>