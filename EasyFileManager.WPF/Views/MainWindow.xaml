<Window x:Class="EasyFileManager.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:EasyFileManager.WPF.Views"
        xmlns:vm="clr-namespace:EasyFileManager.WPF.ViewModels"
        xmlns:core="clr-namespace:EasyFileManager.Core.Models;assembly=EasyFileManager.Core"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:EasyFileManager.WPF.Behaviors"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}"
        Title="Easy File Manager" 
        Height="700" 
        Width="1300"
        MinHeight="700"
        MinWidth="1300"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>

        <Grid.InputBindings>

            <!-- Bookmarks -->
            <KeyBinding Key="D" Modifiers="Ctrl" 
            Command="{Binding ToggleBookmarksFlyoutCommand}"/>

            <!-- Preview Panel -->
            <KeyBinding Key="F3" 
                Command="{Binding TogglePreviewPanelCommand}"/>

            <!-- Filter -->
            <KeyBinding Key="F" Modifiers="Ctrl" 
                Command="{Binding ActivePanel.ShowFilterCommand}"/>
            <KeyBinding Key="Escape" 
                Command="{Binding ActivePanel.HideFilterCommand}"/>

            <!-- Tab Management -->
            <KeyBinding Key="T" Modifiers="Ctrl" 
                Command="{Binding ActivePanel.TabBar.NewTabCommand}"/>
            <KeyBinding Key="W" Modifiers="Ctrl" 
                Command="{Binding ActivePanel.TabBar.CloseTabCommand}"
                CommandParameter="{Binding ActivePanel.TabBar.ActiveTab}"/>
            <KeyBinding Key="Tab" Modifiers="Ctrl" 
                Command="{Binding ActivePanel.TabBar.NextTabCommand}"/>
            <KeyBinding Key="Tab" Modifiers="Ctrl+Shift" 
                Command="{Binding ActivePanel.TabBar.PreviousTabCommand}"/>

            <!-- Copy/Move -->
            <KeyBinding Key="F5" 
                Command="{Binding ActivePanel.CopyToTargetPanelCommand}"/>
            <KeyBinding Key="F6" 
                Command="{Binding ActivePanel.MoveToTargetPanelCommand}"/>

            <!-- Refresh -->
            <KeyBinding Key="R" Modifiers="Ctrl" 
                Command="{Binding ActivePanel.LoadDirectoryCommand}"/>

            <!-- Delete/Rename -->
            <KeyBinding Key="Delete" 
                Command="{Binding ActivePanel.DeleteItemCommand}"/>
            <KeyBinding Key="F2" 
                Command="{Binding ActivePanel.RenameItemCommand}" 
                CommandParameter="{Binding ActivePanel.SelectedItem}"/>
        </Grid.InputBindings>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="16"
                                  materialDesign:ElevationAssist.Elevation="Dp4">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Folder" 
                                             Width="32" 
                                             Height="32" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Easy File Manager" 
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                    
                    <!-- Bookmarks button -->
                    <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                  IsChecked="{Binding DataContext.IsBookmarksFlyoutOpen, RelativeSource={RelativeSource AncestorType=Window}}"
                                  Foreground="{DynamicResource MaterialDesignBody}"
                                  ToolTip="Bookmarks (Ctrl+D)"
                                  Margin="8,0">
                        <materialDesign:PackIcon Kind="Bookmark" Width="20" Height="20"/>
                    </ToggleButton>

                    <!-- Preview Panel Toggle -->
                    <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                  IsChecked="{Binding DataContext.IsPreviewPanelVisible, RelativeSource={RelativeSource AncestorType=Window}}"
                                  Foreground="{DynamicResource MaterialDesignBody}"
                                  ToolTip="Preview Panel (F3)"
                                  Margin="8,0">
                        <materialDesign:PackIcon Kind="Eye" Width="20" Height="20"/>
                    </ToggleButton>

                    <!-- Vertical separator -->
                    <Border Width="1" 
                            Height="24"
                            Background="{DynamicResource MaterialDesignDivider}"
                            Margin="8,0"
                            Opacity="0.5"/>

                    <!-- Copy to other panel -->
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Copy to other panel (F5)"
                            Command="{Binding DataContext.ActivePanel.CopyToTargetPanelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="ContentCopy" Width="20" Height="20"/>
                    </Button>

                    <!-- Move to other panel -->
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Move to other panel (F6)"
                            Command="{Binding DataContext.ActivePanel.MoveToTargetPanelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="8,0">
                        <materialDesign:PackIcon Kind="FileMove" Width="20" Height="20"/>
                    </Button>

                    <Separator Margin="8,0"
                               Height="24"/>

                    <!-- Theme toggle -->
                    <ToggleButton Style="{StaticResource MaterialDesignActionToggleButton}"
                                  IsChecked="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}"
                                  Command="{Binding DataContext.ToggleThemeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  Foreground="{DynamicResource MaterialDesignBody}"
                                  ToolTip="Toggle Dark/Light Theme"
                                  Margin="8,0">
                        <ToggleButton.Content>
                            <materialDesign:PackIcon Kind="WeatherNight"/>
                        </ToggleButton.Content>

                        <materialDesign:ToggleButtonAssist.OnContent>
                            <materialDesign:PackIcon Kind="WeatherSunny"/>
                        </materialDesign:ToggleButtonAssist.OnContent>
                    </ToggleButton>

                    <!-- Settings -->
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Settings"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="8,0"
                            Command="{Binding DataContext.ShowSettingsCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <materialDesign:PackIcon Kind="Cog" Width="20" Height="20"/>
                    </Button>

                    <!-- About -->
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="About"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="8,0"
                            Command="{Binding DataContext.ShowAboutCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                        <materialDesign:PackIcon Kind="Information" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition>
                    <ColumnDefinition.Width>
                        <Binding Path="IsPreviewPanelVisible" Converter="{StaticResource BooleanToGridLengthConverter}" ConverterParameter="5"/>
                    </ColumnDefinition.Width>
                </ColumnDefinition>
                <ColumnDefinition>
                    <ColumnDefinition.Width>
                        <Binding Path="IsPreviewPanelVisible" Converter="{StaticResource BooleanToGridLengthConverter}" ConverterParameter="350"/>
                    </ColumnDefinition.Width>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <materialDesign:Card Grid.Column="0" DataContext="{Binding LeftPanel}">
                <i:Interaction.Behaviors>
                    <behaviors:ActivePanelBehavior ViewModel="{Binding}"
                                                   MainViewModel="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"/>
                </i:Interaction.Behaviors>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Tab Bar -->
                        <RowDefinition Height="Auto"/>  <!-- Navigation header -->
                        <RowDefinition Height="*"/>     <!-- Content (ListView) -->
                    </Grid.RowDefinitions>

                    <!-- Tab Bar -->
                    <views:TabBar Grid.Row="0" 
                                  DataContext="{Binding TabBar}"
                                  Visibility="{Binding HasMultipleTabs, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Left Panel Header -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1: Navigation -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource MaterialDesignToolBarBackground}"
                                Padding="8">
                            <DockPanel>
                                <!-- Buttons on right -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                    <!-- Filter button -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Filter (Ctrl+F)"
                                            Command="{Binding ShowFilterCommand}"
                                            Margin="4,0">
                                        <materialDesign:PackIcon Kind="Magnify"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Refresh"
                                            Command="{Binding LoadDirectoryCommand}"
                                            Margin="4,0">
                                        <materialDesign:PackIcon Kind="Refresh"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Go Up"
                                            Command="{Binding NavigateUpCommand}"
                                            Margin="4,0">
                                        <materialDesign:PackIcon Kind="ArrowUp"/>
                                    </Button>
                                </StackPanel>

                                <!-- Drive selector + Path -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                    <ComboBox Width="120"
                                              ItemsSource="{Binding AvailableDrives}"
                                              SelectedItem="{Binding SelectedDrive}"
                                              materialDesign:HintAssist.Hint="Drive"
                                              Style="{StaticResource MaterialDesignFilledComboBox}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="{Binding DriveType, Converter={StaticResource DriveTypeToIconConverter}}"
                                                                             Width="16"
                                                                             Height="16"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Name, Mode=OneWay}" 
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <Grid Width="300" VerticalAlignment="Center">
                                        <!-- Breadcrumb mode (default) -->
                                        <Border Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Visibility="{Binding IsPathEditable, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                            <DockPanel>
                                                <!-- Edit button -->
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding TogglePathEditCommand}"
                                                        ToolTip="Edit path"
                                                        Width="20"
                                                        Height="20"
                                                        DockPanel.Dock="Right">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14"/>
                                                </Button>

                                                <!-- Breadcrumbs -->
                                                <views:BreadcrumbBar DataContext="{Binding}"/>
                                            </DockPanel>
                                        </Border>

                                        <!-- Edit mode (TextBox) -->
                                        <TextBox Text="{Binding CurrentPath, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Path"
                                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                                 Visibility="{Binding IsPathEditable, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 x:Name="PathTextBox">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding LoadDirectoryCommand}"/>
                                                <KeyBinding Key="Escape" Command="{Binding TogglePathEditCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>
                                    </Grid>
                                </StackPanel>

                                <!-- Loading indicator -->
                                <ProgressBar IsIndeterminate="True"
                                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Height="4"
                                             VerticalAlignment="Bottom"
                                             Margin="0,4,0,0"/>
                            </DockPanel>
                        </Border>

                        <!-- Row 2: Filter box -->
                        <Border Grid.Row="1"
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                BorderThickness="0,2,0,0"
                                Padding="8"
                                Visibility="{Binding IsFilterVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DockPanel>
                                <!-- Close button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding HideFilterCommand}"
                                        ToolTip="Close filter (Esc)"
                                        DockPanel.Dock="Right"
                                        Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="Close"/>
                                </Button>

                                <!-- Clear button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding ClearFilterCommand}"
                                        ToolTip="Clear filter"
                                        DockPanel.Dock="Right"
                                        Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="FilterRemove"/>
                                </Button>

                                <!-- Items count -->
                                <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} items'}"
                                           VerticalAlignment="Center"
                                           Margin="8,0"
                                           FontSize="11"
                                           Opacity="0.7"
                                           DockPanel.Dock="Right"/>

                                <!-- Filter TextBox -->
                                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Filter files..."
                                         Style="{StaticResource MaterialDesignFilledTextBox}"
                                         VerticalAlignment="Center"
                                         materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                         materialDesign:TextFieldAssist.LeadingIcon="Magnify">
                                    <i:Interaction.Behaviors>
                                        <behaviors:FocusOnVisibleBehavior/>
                                    </i:Interaction.Behaviors>
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Esc" Command="{Binding HideFilterCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <!-- Left Panel Content -->
                    <ListView Grid.Row="2" 
                              Margin="8"
                              SelectionMode="Extended"
                              SelectionChanged="ListView_SelectionChanged"
                              ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem}"
                              GotFocus="ListView_GotFocus"
                              Style="{StaticResource MaterialDesignListView}"
                              ItemContainerStyle="{StaticResource AlternatingListViewItemStyle}"
                              AlternationCount="2"
                              behaviors:SortIndicatorHelper.SortColumn="{Binding SortColumn}"
                              behaviors:SortIndicatorHelper.SortDirection="{Binding SortDirection}">

                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open" 
                                          Command="{Binding OpenItemCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="FolderOpen"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Copy" 
                                          Command="{Binding CopyItemCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ContentCopy"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Copy Path" 
                                          Command="{Binding CopyPathCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="LinkVariant"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Rename" 
                                          Command="{Binding RenameItemCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Pencil"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Delete" 
                                          Command="{Binding DeleteItemCommand}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Delete" Foreground="Red"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Properties" 
                                          Command="{Binding ShowPropertiesCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Information"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <i:Interaction.Behaviors>
                            <behaviors:ListViewDoubleClickBehavior Command="{Binding OpenItemCommand}"/>
                            <behaviors:GridViewColumnHeaderClickBehavior Command="{Binding SortByCommand}"/>
                        </i:Interaction.Behaviors>

                        <ListView.View>
                            <GridView>
                                <!-- Column 1: Name with Icon -->
                                <GridViewColumn Width="250">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Name" Tag="Name" Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="4,2">
                                                <materialDesign:PackIcon VerticalAlignment="Center"
                                                                         Margin="0,0,8,0"
                                                                         Width="16" 
                                                                         Height="16"
                                                                         Kind="{Binding Converter={StaticResource FileEntryToIconConverter}}"/>
                                                <TextBlock Text="{Binding Name}" 
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 2: Size -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Size" 
                                                              Tag="Size"
                                                              HorizontalContentAlignment="Right"
                                                              Padding="8,4"
                                                              MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToSizeConverter}}" 
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Center"
                                                       Margin="8,2"
                                                       MinWidth="60"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 3: Type -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Type" 
                                                              Tag="Type"
                                                              Padding="8,4"
                                                              MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToTypeConverter}}" 
                                                       VerticalAlignment="Center"
                                                       Margin="8,2"
                                                       MinWidth="50"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 4: Date Modified -->
                                <GridViewColumn Width="140">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Date Modified" 
                                                              Tag="LastModified"
                                                              Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToDateConverter}}" 
                                                       VerticalAlignment="Center"
                                                       Margin="8,2"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:Card>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Right Panel -->
            <materialDesign:Card Grid.Column="2" DataContext="{Binding RightPanel}">
                <i:Interaction.Behaviors>
                    <behaviors:ActivePanelBehavior ViewModel="{Binding}"
                                                   MainViewModel="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"/>
                </i:Interaction.Behaviors>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Tab Bar -->
                        <RowDefinition Height="Auto"/>  <!-- Navigation header -->
                        <RowDefinition Height="*"/>     <!-- Content (ListView) -->
                    </Grid.RowDefinitions>

                    <!-- Tab Bar -->
                    <views:TabBar Grid.Row="0" 
                                  DataContext="{Binding TabBar}"
                                  Visibility="{Binding HasMultipleTabs, Converter={StaticResource BooleanToVisibilityConverter}}"/>


                    <!-- Right Panel Header -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1: Navigation -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource MaterialDesignToolBarBackground}"
                                Padding="8">
                            <DockPanel>
                                <!-- Buttons on right -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                    <!-- Filter button -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Filter (Ctrl+F)"
                                            Command="{Binding ShowFilterCommand}"
                                            Margin="4,0">
                                        <materialDesign:PackIcon Kind="Magnify"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Refresh"
                                            Command="{Binding LoadDirectoryCommand}"
                                            Margin="4,0">
                                        <materialDesign:PackIcon Kind="Refresh"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Go Up"
                                            Command="{Binding NavigateUpCommand}"
                                            Margin="4,0">
                                        <materialDesign:PackIcon Kind="ArrowUp"/>
                                    </Button>
                                </StackPanel>

                                <!-- Drive selector + Path -->
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                    <ComboBox Width="120"
                                              ItemsSource="{Binding AvailableDrives}"
                                              SelectedItem="{Binding SelectedDrive}"
                                              materialDesign:HintAssist.Hint="Drive"
                                              Style="{StaticResource MaterialDesignFilledComboBox}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="{Binding DriveType, Converter={StaticResource DriveTypeToIconConverter}}"
                                                                             Width="16"
                                                                             Height="16"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,6,0"/>
                                                    <TextBlock Text="{Binding Name, Mode=OneWay}" 
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <Grid Width="300" VerticalAlignment="Center">
                                        <!-- Breadcrumb mode (default) -->
                                        <Border Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Visibility="{Binding IsPathEditable, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                            <DockPanel>
                                                <!-- Edit button -->
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding TogglePathEditCommand}"
                                                        ToolTip="Edit path"
                                                        Width="20"
                                                        Height="20"
                                                        DockPanel.Dock="Right">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14"/>
                                                </Button>

                                                <!-- Breadcrumbs -->
                                                <views:BreadcrumbBar DataContext="{Binding}"/>
                                            </DockPanel>
                                        </Border>

                                        <!-- Edit mode (TextBox) -->
                                        <TextBox Text="{Binding CurrentPath, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Path"
                                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                                 Visibility="{Binding IsPathEditable, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 x:Name="PathTextBox2">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding LoadDirectoryCommand}"/>
                                                <KeyBinding Key="Escape" Command="{Binding TogglePathEditCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>
                                    </Grid>
                                </StackPanel>

                                <!-- Loading indicator -->
                                <ProgressBar IsIndeterminate="True"
                                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Height="4"
                                             VerticalAlignment="Bottom"
                                             Margin="0,4,0,0"/>
                            </DockPanel>
                        </Border>

                        <!-- Row 2: Filter box -->
                        <Border Grid.Row="1"
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                BorderThickness="0,2,0,0"
                                Padding="8"
                                Visibility="{Binding IsFilterVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DockPanel>
                                <!-- Close button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding HideFilterCommand}"
                                        ToolTip="Close filter (Esc)"
                                        DockPanel.Dock="Right"
                                        Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="Close"/>
                                </Button>

                                <!-- Clear button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding ClearFilterCommand}"
                                        ToolTip="Clear filter"
                                        DockPanel.Dock="Right"
                                        Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="FilterRemove"/>
                                </Button>

                                <!-- Items count -->
                                <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} items'}"
                                           VerticalAlignment="Center"
                                           Margin="8,0"
                                           FontSize="11"
                                           Opacity="0.7"
                                           DockPanel.Dock="Right"/>

                                <!-- Filter TextBox -->
                                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Filter files..."
                                         Style="{StaticResource MaterialDesignFilledTextBox}"
                                         VerticalAlignment="Center"
                                         materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                         materialDesign:TextFieldAssist.LeadingIcon="Magnify">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Esc" Command="{Binding HideFilterCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <!-- Right Panel Content -->
                    <ListView Grid.Row="2" 
                              Margin="8"
                              SelectionMode="Extended"
                              SelectionChanged="ListView_SelectionChanged"
                              ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem}"
                              GotFocus="ListView_GotFocus"
                              Style="{StaticResource MaterialDesignListView}"
                              ItemContainerStyle="{StaticResource AlternatingListViewItemStyle}"
                              AlternationCount="2"
                              behaviors:SortIndicatorHelper.SortColumn="{Binding SortColumn}"
                              behaviors:SortIndicatorHelper.SortDirection="{Binding SortDirection}">

                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open" 
                                          Command="{Binding OpenItemCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="FolderOpen"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Copy" 
                                          Command="{Binding CopyItemCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ContentCopy"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Copy Path" 
                                          Command="{Binding CopyPathCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="LinkVariant"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Rename" 
                                          Command="{Binding RenameItemCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Pencil"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Delete" 
                                          Command="{Binding DeleteItemCommand}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Delete" Foreground="Red"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Properties" 
                                          Command="{Binding ShowPropertiesCommand}"
                                          CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Information"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <i:Interaction.Behaviors>
                            <behaviors:ListViewDoubleClickBehavior Command="{Binding OpenItemCommand}"/>
                            <behaviors:GridViewColumnHeaderClickBehavior Command="{Binding SortByCommand}"/>
                        </i:Interaction.Behaviors>

                        <ListView.View>
                            <GridView>
                                <!-- Column 1: Name with Icon -->
                                <GridViewColumn Width="250">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Name" Tag="Name" Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="4,2">
                                                <materialDesign:PackIcon VerticalAlignment="Center"
                                                                         Margin="0,0,8,0"
                                                                         Width="16" 
                                                                         Height="16"
                                                                         Kind="{Binding Converter={StaticResource FileEntryToIconConverter}}"/>
                                                <TextBlock Text="{Binding Name}" 
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 2: Size -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Size" 
                                                              Tag="Size"
                                                              HorizontalContentAlignment="Right"
                                                              Padding="8,4"
                                                              MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToSizeConverter}}" 
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Center"
                                                       Margin="8,2"
                                                       MinWidth="60"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 3: Type -->
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Type" 
                                                              Tag="Type"
                                                              Padding="8,4"
                                                              MinWidth="80"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToTypeConverter}}" 
                                                       VerticalAlignment="Center"
                                                       Margin="8,2"
                                                       MinWidth="50"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Column 4: Date Modified -->
                                <GridViewColumn Width="140">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Date Modified" 
                                                              Tag="LastModified"
                                                              Padding="8,4"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FileEntryToDateConverter}}" 
                                                       VerticalAlignment="Center"
                                                       Margin="8,2"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:Card>
            
            <!-- Splitter for Preview Panel -->
            <GridSplitter Grid.Column="3" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Preview Panel -->
            <materialDesign:Card Grid.Column="4">
                <views:PreviewPanel DataContext="{Binding Path=PreviewPanelViewModel}"/>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2" 
                                  Mode="PrimaryLight" 
                                  Padding="8">
            <DockPanel>
                <TextBlock Text="{Binding LeftPanel.StatusMessage}" 
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                    <TextBlock VerticalAlignment="Center"
                               Margin="0,0,16,0">
                        <Run Text="Left: "/>
                        <Run Text="{Binding LeftPanel.TotalItems, Mode=OneWay}"/>
                        <Run Text=" items"/>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center"
                               Margin="0,0,16,0">
                        <Run Text="Right: "/>
                        <Run Text="{Binding RightPanel.TotalItems, Mode=OneWay}"/>
                        <Run Text=" items"/>
                    </TextBlock>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Bookmarks Flyout -->
        <Border Grid.RowSpan="3"
                HorizontalAlignment="Right"
                Width="320"
                Background="{DynamicResource MaterialDesignPaper}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1,0,0,0"
                Panel.ZIndex="100"
                Visibility="{Binding IsBookmarksFlyoutOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" 
                                  BlurRadius="15" 
                                  Opacity="0.3"/>
            </Border.Effect>

            <views:BookmarksFlyout DataContext="{Binding BookmarksViewModel}"/>
        </Border>

        <!-- Overlay (dim background when flyout is open) -->
        <Border Grid.RowSpan="3"
                Background="Black"
                Opacity="0.3"
                Panel.ZIndex="99"
                Visibility="{Binding IsBookmarksFlyoutOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                MouseLeftButtonDown="Overlay_MouseLeftButtonDown"/>
    </Grid>
</Window>