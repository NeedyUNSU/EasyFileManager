<UserControl x:Class="EasyFileManager.WPF.Views.PreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:EasyFileManager.WPF.ViewModels"
             xmlns:models="clr-namespace:EasyFileManager.Core.Models;assembly=EasyFileManager.Core"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PreviewPanelViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="400"
             Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
                
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                Padding="12,8">
            <DockPanel>
                <materialDesign:PackIcon Kind="Eye"
                                         Width="20"
                                         Height="20"
                                         VerticalAlignment="Center"
                                         DockPanel.Dock="Left"
                                         Margin="0,0,8,0"/>
                <TextBlock Text="Preview"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </DockPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <ScrollViewer.Style>
                <Style TargetType="ScrollViewer">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <!-- Hide when loading -->
                        <DataTrigger Binding="{Binding DataContext.IsLoading, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ScrollViewer.Style>
            
            <Grid>
                
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Value="0"
                                 IsIndeterminate="True"
                                 Width="48"
                                 Height="48"/>
                    <TextBlock Text="Loading preview..."
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Margin="0,16,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Preview Content -->
                <ContentControl Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <!-- No Preview -->
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.None}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center" 
                                                            HorizontalAlignment="Center"
                                                            Margin="24">
                                                    <materialDesign:PackIcon Kind="FileOutline"
                                                                             Width="64"
                                                                             Height="64"
                                                                             Opacity="0.3"
                                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DataContext.CurrentPreview.Name}"
                                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                               Opacity="0.5"
                                                               Margin="0,16,0,0"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>

                                <!-- Image Preview -->
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.Image}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                              VerticalScrollBarVisibility="Auto"
                                                              Margin="16">
                                                    <Image Source="{Binding DataContext.ImagePreview, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                           Stretch="Uniform"
                                                           StretchDirection="DownOnly"
                                                           MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                                           MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                                                </ScrollViewer>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>

                                <!-- Image Too Large -->
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.ImageTooLarge}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center" 
                                                            HorizontalAlignment="Center"
                                                            Margin="24"
                                                            MaxWidth="400">
                                                    <!-- Large Image Icon -->
                                                    <materialDesign:PackIcon Kind="ImageSizeSelectLarge"
                                                                             Width="96"
                                                                             Height="96"
                                                                             Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                                             HorizontalAlignment="Center"
                                                                             Margin="0,0,0,24"/>

                                                    <!-- Warning Message -->
                                                    <Border Background="{DynamicResource SecondaryHueMidBrush}"
                                                            Padding="16"
                                                            CornerRadius="8"
                                                            Margin="0,0,0,16">
                                                        <StackPanel>
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Center"
                                                                        Margin="0,0,0,8">
                                                                <materialDesign:PackIcon Kind="AlertCircle"
                                                         Width="20"
                                                         Height="20"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                                                <TextBlock Text="Image Too Large"
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                                            </StackPanel>

                                                            <TextBlock Text="{Binding DataContext.CurrentPreview.ErrorMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,8"/>

                                                            <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center">
                                <Run Text="File size: "/>
                                <Run Text="{Binding DataContext.CurrentPreview.FileSize, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource FileSizeConverter}, Mode=OneWay}"
                                     FontWeight="SemiBold"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- Helpful Note -->
                                                    <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.7"
                               TextWrapping="Wrap"
                               TextAlignment="Center">
                        <Run Text="To preview this image, use an external viewer or reduce the file size."/>
                                                    </TextBlock>

                                                    <!-- Open in External Viewer Button -->
                                                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
        Command="{Binding DataContext.OpenInExternalViewerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
        HorizontalAlignment="Center"
        Padding="16,8">
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="OpenInNew"
                                     Width="20"
                                     Height="20"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"/>
                                                                <TextBlock Text="OPEN IN EXTERNAL VIEWER"
                       VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>

                                <!-- Text Preview -->
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.Text}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <Grid Margin="16">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Truncation Warning -->
                                                    <Border Grid.Row="0"
                Background="{DynamicResource SecondaryHueMidBrush}"
                Padding="8"
                CornerRadius="4"
                Margin="0,0,0,8"
                Visibility="{Binding DataContext.CurrentPreview.IsTruncated, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="AlertCircle"
                                         Width="16"
                                         Height="16"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                                                            <TextBlock Text="{Binding DataContext.CurrentPreview.LineCount, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='Showing first {0} lines'}"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- Text Content -->
                                                    <TextBox Grid.Row="1"
                 Text="{Binding DataContext.CurrentPreview.TextContent, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                 IsReadOnly="True"
                 TextWrapping="NoWrap"
                 FontFamily="Consolas"
                 FontSize="12"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                 BorderThickness="1"
                 BorderBrush="{DynamicResource MaterialDesignDivider}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>

                                <!-- Directory Preview -->
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.Directory}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <StackPanel Margin="24" VerticalAlignment="Center">
                                                    <!-- Folder Icon -->
                                                    <materialDesign:PackIcon Kind="Folder"
                                             Width="96"
                                             Height="96"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,24"/>

                                                    <!-- Folder Name -->
                                                    <TextBlock Text="{Binding DataContext.CurrentPreview.FileName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               HorizontalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="300"
                               Margin="0,0,0,24"/>

                                                    <!-- Statistics Cards -->
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Files Count -->
                                                        <materialDesign:Card Grid.Row="0" Margin="0,0,0,8" Padding="16">
                                                            <DockPanel>
                                                                <materialDesign:PackIcon Kind="File"
                                                         Width="24"
                                                         Height="24"
                                                         VerticalAlignment="Center"
                                                         DockPanel.Dock="Left"
                                                         Margin="0,0,12,0"/>
                                                                <StackPanel>
                                                                    <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Opacity="0.7">
                                        <Run Text="{Binding DataContext.CurrentPreview.DirectoryFileCount, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"/>
                                        <Run Text="Files"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="{Binding DataContext.CurrentPreview.DirectoryTotalSize, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource FileSizeConverter}, Mode=OneWay}"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Opacity="0.6"/>
                                                                </StackPanel>
                                                            </DockPanel>
                                                        </materialDesign:Card>

                                                        <!-- Subdirectories Count -->
                                                        <materialDesign:Card Grid.Row="1" Margin="0,0,0,8" Padding="16">
                                                            <DockPanel>
                                                                <materialDesign:PackIcon Kind="FolderMultiple"
                                                         Width="24"
                                                         Height="24"
                                                         VerticalAlignment="Center"
                                                         DockPanel.Dock="Left"
                                                         Margin="0,0,12,0"/>
                                                                <TextBlock Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Opacity="0.7"
                                           VerticalAlignment="Center">
                                    <Run Text="{Binding DataContext.CurrentPreview.DirectorySubdirCount, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"/>
                                    <Run Text="Subdirectories"/>
                                                                </TextBlock>
                                                            </DockPanel>
                                                        </materialDesign:Card>

                                                        <!-- Created Date -->
                                                        <materialDesign:Card Grid.Row="2" Padding="16">
                                                            <DockPanel>
                                                                <materialDesign:PackIcon Kind="Calendar"
                                                         Width="24"
                                                         Height="24"
                                                         VerticalAlignment="Center"
                                                         DockPanel.Dock="Left"
                                                         Margin="0,0,12,0"/>
                                                                <StackPanel>
                                                                    <TextBlock Text="Created"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Opacity="0.6"/>
                                                                    <TextBlock Text="{Binding DataContext.CurrentPreview.DirectoryCreated, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                                                                </StackPanel>
                                                            </DockPanel>
                                                        </materialDesign:Card>
                                                    </Grid>
                                                </StackPanel>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>

                                <!-- Metadata / Unsupported -->
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.Metadata}">
                                    <Setter Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <StackPanel Margin="16" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="FileDocument"
                                             Width="64"
                                             Height="64"
                                             Opacity="0.3"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,16"/>
                                                    <TextBlock Text="Preview not available for this file type"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Opacity="0.7"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,16"/>

                                                    <!-- Open Button -->
                                                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding DataContext.OpenInExternalViewerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            HorizontalAlignment="Center"
                            Padding="16,8">
                                                        <Button.Content>
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="OpenInApp"
                                                         Width="20"
                                                         Height="20"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                                                <TextBlock Text="OPEN IN DEFAULT APPLICATION"
                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Button.Content>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </ScrollViewer>

        <!-- Metadata Footer -->
        <Border Grid.Row="2"
        Background="{DynamicResource MaterialDesignToolBarBackground}"
        Padding="12">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <!-- Hide footer when no preview -->
                        <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.None}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <!-- Also hide for Directory -->
                        <DataTrigger Binding="{Binding DataContext.CurrentPreview.Type, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Static models:PreviewType.Directory}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DataContext.CurrentPreview, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel>
                <!-- File Name -->
                <DockPanel Margin="0,0,0,8">
                    <Button Style="{StaticResource MaterialDesignIconButton}"
            Command="{Binding DataContext.OpenInExternalViewerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ToolTip="Open in external application"
            DockPanel.Dock="Right"
            Width="24"
            Height="24"
            Padding="0">
                        <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16"/>
                    </Button>

                    <TextBlock Text="{Binding DataContext.CurrentPreview.FileName, RelativeSource={RelativeSource AncestorType=UserControl}}"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               FontWeight="SemiBold"
               TextTrimming="CharacterEllipsis"
               VerticalAlignment="Center"/>
                </DockPanel>

                <!-- File Size -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Size: "
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Opacity="0.7"/>
                    <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}">
                <Run Text="{Binding DataContext.CurrentPreview.FileSize, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource FileSizeConverter}, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Last Modified -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Modified: "
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Opacity="0.7"/>
                    <TextBlock Text="{Binding DataContext.CurrentPreview.LastModified, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                </StackPanel>

                <!-- Hash Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="MD5"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding DataContext.CalculateMd5HashCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Height="28"
                    Padding="12,4"
                    Margin="0,0,8,0"/>
                    <Button Content="SHA256"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding DataContext.CalculateSha256HashCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Height="28"
                    Padding="12,4"/>
                </StackPanel>

                <!-- Hash Display - MD5 -->
                <StackPanel Margin="0,8,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Md5Hash, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="MD5:"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Opacity="0.7"/>
                    <TextBox Text="{Binding DataContext.CurrentPreview.Md5Hash, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     FontSize="10"
                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                     BorderThickness="0"
                     Padding="0"/>
                </StackPanel>

                <!-- Hash Display - SHA256 -->
                <StackPanel Margin="0,4,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.CurrentPreview.Sha256Hash, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}" Value="Visible">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="SHA256:"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Opacity="0.7"/>
                    <TextBox Text="{Binding DataContext.CurrentPreview.Sha256Hash, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     FontSize="10"
                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                     BorderThickness="0"
                     Padding="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
