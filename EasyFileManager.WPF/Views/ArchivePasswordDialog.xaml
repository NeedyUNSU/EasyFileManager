<Window x:Class="EasyFileManager.WPF.Views.ArchivePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Archive Password Required" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">
    <Border BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="2"
            CornerRadius="4">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="Lock" 
                                         Width="32" 
                                         Height="32"
                                         Foreground="{DynamicResource SecondaryHueMidBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"/>
                <TextBlock Text="Password Required"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock Grid.Row="1"
                       x:Name="MessageTextBlock"
                       Text="This archive is encrypted and requires a password."
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

            <!-- Archive Name -->
            <Border Grid.Row="2"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    Padding="12"
                    CornerRadius="4"
                    Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Archive"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"
                                             Opacity="0.7"/>
                    <TextBlock x:Name="ArchiveNameTextBlock"
                               Text="archive.zip"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Password Field -->
            <PasswordBox Grid.Row="3"
                         x:Name="PasswordBox"
                         materialDesign:HintAssist.Hint="Password"
                         Style="{StaticResource MaterialDesignFilledPasswordBox}"
                         Margin="0,0,0,16">
                <PasswordBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding ElementName=OkButton, Path=Command}"/>
                    <KeyBinding Key="Escape" Command="{Binding ElementName=CancelButton, Path=Command}"/>
                </PasswordBox.InputBindings>
            </PasswordBox>

            <!-- Remember Password -->
            <CheckBox Grid.Row="4"
                      x:Name="RememberPasswordCheckBox"
                      Content="Remember password for this session"
                      Style="{StaticResource MaterialDesignCheckBox}"
                      IsChecked="True"
                      VerticalAlignment="Top"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">
                <Button x:Name="CancelButton"
                        Content="CANCEL"
                        IsCancel="True"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CancelButton_Click"
                        Margin="0,0,8,0"/>
                <Button x:Name="OkButton"
                        Content="OK"
                        IsDefault="True"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
