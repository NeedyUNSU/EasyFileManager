<Window x:Class="EasyFileManager.WPF.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding Title}" 
        Height="Auto" 
        Width="500"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="Height"
        ShowInTaskbar="True"
        AllowsTransparency="True">

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CloseDialogCommand}"/>
    </Window.InputBindings>

    <Border Background="{DynamicResource MaterialDesignPaper}"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="1"
            CornerRadius="8"
            materialDesign:ElevationAssist.Elevation="Dp8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:ColorZone Grid.Row="0"
                                      Mode="PrimaryMid"
                                      Padding="24,16"
                                      CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <materialDesign:PackIcon Grid.Column="0"
                         Kind="{Binding IconKind}" 
                         Width="28" 
                         Height="28"
                         VerticalAlignment="Center"
                         Margin="0,0,16,0"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         Visibility="{Binding ShowIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding Title}"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"/>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Content -->
            <Grid Grid.Row="1" 
                  Margin="32,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Large Icon -->
                <materialDesign:PackIcon Grid.Column="0"
                         Kind="{Binding IconKind}"
                         Width="56"
                         Height="56"
                         VerticalAlignment="Top"
                         Margin="0,0,24,0"
                         Foreground="{Binding IconColor}"
                         Visibility="{Binding ShowIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Message}"
                           Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           LineHeight="24"
                           FontSize="14"/>
            </Grid>

            <!-- Buttons -->
            <Border Grid.Row="2"
                    Background="{DynamicResource MaterialDesignDivider}"
                    Padding="24,16"
                    CornerRadius="0,0,8,8">
                <ItemsControl ItemsSource="{Binding Buttons}"
                              HorizontalAlignment="Right">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Content}"
                                    Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Result}"
                                    Click="Button_Click"
                                    MinWidth="100"
                                    Margin="0,0,12,0"
                                    Height="40"
                                    materialDesign:ButtonAssist.CornerRadius="4"
                                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                    Foreground="{DynamicResource MaterialDesignBody}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDefault}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDefault}" Value="False">
                                                <Setter Property="Background" Value="{DynamicResource   MaterialDesign.Brush.Background}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Border>
</Window>