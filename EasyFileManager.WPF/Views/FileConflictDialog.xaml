<Window x:Class="EasyFileManager.WPF.Views.FileConflictDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="File Conflict" 
        SizeToContent="Height"
        Width="500"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">
    <Border BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="2"
            CornerRadius="4">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="AlertCircle" 
                                         Width="32" 
                                         Height="32"
                                         Foreground="{DynamicResource SecondaryHueMidBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"/>
                <TextBlock Text="File Already Exists"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock Grid.Row="1"
                       x:Name="MessageTextBlock"
                       Text="The file already exists in the destination folder."
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

            <!-- File comparison -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Source:"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,4">
                    <TextBlock x:Name="SourceNameTextBlock"
                               Text="document.txt"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="SourceInfoTextBlock"
                               Text="15 KB • Modified: 2025-01-15 14:30"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.7"/>
                </StackPanel>

                <!-- Destination -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Destination:"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,8,0,4"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,8,0,4">
                    <TextBlock x:Name="DestinationNameTextBlock"
                               Text="document.txt"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="DestinationInfoTextBlock"
                               Text="12 KB • Modified: 2025-01-10 10:20"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Opacity="0.7"/>
                </StackPanel>
            </Grid>

            <!-- Resolution options -->
            <StackPanel Grid.Row="3" Margin="0,0,0,16">
                <TextBlock Text="What do you want to do?"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <RadioButton x:Name="SkipRadioButton"
                             Content="Skip this file"
                             IsChecked="True"
                             Style="{StaticResource MaterialDesignRadioButton}"
                             Margin="0,0,0,8"/>

                <RadioButton x:Name="OverwriteRadioButton"
                             Content="Replace (overwrite the destination file)"
                             Style="{StaticResource MaterialDesignRadioButton}"
                             Margin="0,0,0,8"/>

                <RadioButton x:Name="RenameRadioButton"
                             Style="{StaticResource MaterialDesignRadioButton}"
                             Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Keep both (rename to:)" Margin="0,0,0,4"/>
                        <TextBox x:Name="RenameTextBox"
                                 Text="document (1).txt"
                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                 Width="300"
                                 HorizontalAlignment="Left"
                                 IsEnabled="{Binding IsChecked, ElementName=RenameRadioButton}"/>
                    </StackPanel>
                </RadioButton>

                <CheckBox x:Name="ApplyToAllCheckBox"
                          Content="Apply to all conflicts"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          Margin="0,12,0,0"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="CANCEL"
                        Click="CancelButton_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,0,8,0"/>
                <Button Content="CONTINUE"
                        Click="ContinueButton_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>